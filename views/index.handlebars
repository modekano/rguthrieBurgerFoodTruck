<h1>BurgerFT Kitchen Orders - LET'S GET ON IT!</h1>

<h2>ORDERS IN</h2>
<ul>
  {{#each orders}}
    {{#unless served}} 
      {{> orders/order-block}}
    {{/unless}} 
  {{/each}}
</ul>

<h2>Orders Served</h2>
<ul>
  {{#each orders}}
    {{#if served}}
      {{> orders/order-block}}
      </li>      
    {{/if}}
  {{/each}}
</ul>

<h2>Add Order from Menu</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Menu Item:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="served">Order Routing?</label><br>
    <input type="radio" name="served" value="0" checked> Send to the Kitchen<br>
    <input type="radio" name="served" value="1"> Record as Served
  </div>

  <button type="submit">New Order</button>
</form>
